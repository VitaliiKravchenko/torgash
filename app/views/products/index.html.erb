<p id="notice"><%= notice %></p>

<%= form_tag products_path, class: "form-inline", method: :get do%>
  <%= text_field_tag :search, params[:search], class: "form-control" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% if params[:search].present? %>
    <%= link_to "clear", products_path %>
  <%end%>
<%end%>


<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Product owner</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.user.name %></td>
        <td><%=link_to product.title, product %></td>
        <td><%=truncate(product.description.html_safe, :length => 163, :separator => ' ') %></td>
        <td><%=image_tag product.image_url(:thumbnail) %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
