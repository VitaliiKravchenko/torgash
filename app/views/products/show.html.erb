<p id="notice"><%= notice %></p>

<p>
  <strong>Owner:</strong>
  <%= @product.user.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<div id="product">
  <%= render @product %>
</div>

<%= form_for(Micropost.new, remote: true) do |f| %>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <div class="field">
    <%= f.label :Post %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
