<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Email</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Zip</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.name %></td>
        <td><%= user.birthday %></td>
        <td><%= user.email %></td>
        <td><%= user.country %></td>
        <td><%= user.state %></td>
        <td><%= user.city %></td>
        <td><%= user.zip %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user %>
          <% if ["admin"].include?(current_user.role) || current_user.id == user.id%> 
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
<br>

